<body>
    <header>
        <div class="header-left-side">
            <div class="logo_container">
                <a id="home" href="index.html"><span class="logo">Hoteluri Romania</span></a>
                <div>
                    <img src="images/hotel.svg" class="img_logo" alt="Logo" />
                </div>
            </div>
            <div class="slideshow-container">
                <div class="mySlides fade">
                    <div class="numbertext">1 / 3</div>
                    <img class="imgslide" src="images/img3.jpg" style="width:100%">
                    <div class="text">Caption Text</div>
                </div>

                <div style="display:none" class="mySlides fade">
                    <div class="numbertext">2 / 3</div>
                    <img class="imgslide" src="images/img1.jpg" style="width:100%">
